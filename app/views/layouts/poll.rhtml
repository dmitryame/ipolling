<html>
<head>
  <title>iPoll: <%= controller.action_name %></title>
  <%= stylesheet_link_tag "default" %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
<table width="100%">
    <tr>
        <td>
            <font size="+3">iPoll</font>
        </td>
